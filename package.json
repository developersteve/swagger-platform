{
  "name": "openapi-platform",
  "version": "1.0.0",
  "repository": "https://github.com/telstra/openapi-platform.git",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "build-packages/*"
  ],
  "scripts": {
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"{**/,}*.{js,jsx,ts,tsx}\"",
    "format:lint": "yarn checker:lint --fix",
    "build": "gulp build",
    "watch": "gulp watch",
    "transpile": "gulp transpile",
    "bundle": "gulp bundle",
    "watch:checker": "nodemon --quiet -e tsx --watch ./packages --watch ./test --exec \"echo \\\"Checking types...\\\" && yarn checker\"",
    "checker": "run-s checker:*",
    "checker:types": "tsc --noEmit",
    "checker:lint": "tslint -p .",
    "test": "yarn transpile && yarn test:jest",
    "test:jest": "jest",
    "test:no-system": "yarn test:jest --testMatch \"<rootDir>/test/!(system/)**/?(*.)test.(t|j)s?(x)\"",
    "ci-test": "yarn checker:types && yarn transpile && yarn test:no-system"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn checker:types && yarn format:lint && lint-staged && yarn test:no-system"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn format:prettier",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn format:prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/polyfill": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/preset-typescript": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-rc.1",
    "@types/jest": "^22.2.2",
    "@types/storybook__react": "^3.0.8",
    "@types/webpack": "^4.1.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.0",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-runtime": "^6.26.0",
    "browser-sync": "^2.24.6",
    "connect-history-api-fallback": "^1.5.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "file-loader": "^1.1.11",
    "gulp": "4",
    "gulp-babel": "8.0.0-beta.2",
    "gulp-filter": "^5.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-watch": "^5.0.1",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.15.0-rc.13",
    "jest": "^23.4.1",
    "jest-mock-functions": "^1.2.0",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.4.1",
    "style-loader": "^0.20.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.9.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-stream": "^5.1.1"
  },
